<?xml version='1.0' encoding='utf-8'?>
<widget id="com.foodpoker" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>FoodPoker</name>
    <description>
        You don't know where to eat for lunch or dinner? Let the app pick a restaurant for you!
    </description>
    <author email="nathan.page86@gmail.com" href="https://github.com/natepage">
        Nathan Page
    </author>
    <content src="index.html" />
    <hook src="scripts/copyNodeModulesToWww.js" type="before_build" />
    <preference name="phonegap-version" value="cli-8.0.0" />
    <platform name="android">
        <icon density="ldpi" src="www/res/icon/android/food-poker-ldpi.png" />
        <icon density="mdpi" src="www/res/icon/android/food-poker-mdpi.png" />
        <icon density="hdpi" src="www/res/icon/android/food-poker-hdpi.png" />
        <icon density="xhdpi" src="www/res/icon/android/food-poker-xhdpi.png" />
        <icon density="xxhdpi" src="www/res/icon/android/food-poker-xxhdpi.png" />
        <icon density="xxxhdpi" src="www/res/icon/android/food-poker-xxxhdpi.png" />
    </platform>
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.3.3" />
    <access origin="*" />
    <engine name="android" spec="7.0.0" />
</widget>
